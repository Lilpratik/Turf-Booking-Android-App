<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:name="http://schemas.android.com/apk/distribution"
    package="com.pratik.turfbooking">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="ExtraText">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:label="@string/dashboard_activity_title"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:label="@string/home_activity_title"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <!-- Turf Detail Activity -->
        <activity
            android:name=".TurfDetailActivity"
            android:label="@string/turf_detail_activity_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".EditProfileActivity"
            android:theme="@style/NoActionBarTheme"/>

        <!-- Admin Login Activity -->
        <activity
            android:name=".AdminLoginActivity"
            android:label="@string/admin_login_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminRegisterActivity"
            android:label="Admin Register Activity"
            android:theme="@style/NoActionBarTheme">
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="Admin Activity"
            android:theme="@style/NoActionBarTheme">
        </activity>
     <!--   <activity
            android:name=".AdminDashboardActivity"
            android:label="Admin Dashboard">
        </activity> -->

        <activity
            android:name=".AddTurfActivity"
            android:label="Add Turf"
            android:theme="@style/NoActionBarTheme">
        </activity>
        <activity android:name=".AddFootballVenueActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
